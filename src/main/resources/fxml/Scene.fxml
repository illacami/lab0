<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.lab0.FXMLController">
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Inserire nome utente e password">
               <VBox.margin>
                  <Insets left="110.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtNome" alignment="TOP_LEFT" maxWidth="150.0" promptText="Nome utente">
               <VBox.margin>
                  <Insets left="120.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="txtPassword" maxWidth="150.0" promptText="Password">
               <VBox.margin>
                  <Insets left="120.0" />
               </VBox.margin>
            </PasswordField>
            <Label fx:id="txtTentativi" maxWidth="1.7976931348623157E308" prefHeight="17.0" prefWidth="350.0" />
            <Label fx:id="txtRisultato" maxWidth="1.7976931348623157E308" prefHeight="17.0" prefWidth="350.0" />
            <Button fx:id="btmClear" disable="true" mnemonicParsing="false" onAction="#doClear" text="Clear" textAlignment="JUSTIFY" visible="false">
               <padding>
                  <Insets bottom="5.0" left="175.0" right="175.0" top="5.0" />
               </padding>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <top>
      <Label lineSpacing="10.0" text="Login" BorderPane.alignment="CENTER">
         <font>
            <Font name="Arial Bold" size="20.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <bottom>
      <Button fx:id="btmAccedi" mnemonicParsing="false" onAction="#doAccesso" text="Accedi" BorderPane.alignment="CENTER" />
   </bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
